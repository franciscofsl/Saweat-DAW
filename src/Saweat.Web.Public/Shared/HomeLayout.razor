@using Radzen.Blazor
@inherits Saweat.Web.Public.Layouts.HomeLayoutComponent
<RadzenDialog/>
<RadzenNotification/>
<RadzenTooltip/>
<RadzenContextMenu/>

<RadzenLayout>
    <ChildContent>
        <RadzenHeader>
            <ChildContent>
                <div class="row justify-content-start align-items-center">
                    <div class="col-md-6 d-flex align-items-center" style="padding-left: 30px">
                        <RadzenLabel Text="Saweat.Web.Public">
                        </RadzenLabel>
                    </div>
                    <div class="col-md-6 text-lg-right">
                        <RadzenMenu style=@("height: 50px;flex: auto")>
                            <ChildContent>
                                <RadzenMenuItem Text="Home" Path="home">
                                </RadzenMenuItem>
                            </ChildContent>
                        </RadzenMenu>
                    </div>
                </div>
            </ChildContent>
        </RadzenHeader>
        <RadzenBody @ref="body0" style="margin-left: 0px; margin-top: 58px">
            <ChildContent>
                <RadzenContentContainer Name="main">
                    @Body
                </RadzenContentContainer>
            </ChildContent>
        </RadzenBody>
        <RadzenFooter>
            <ChildContent>
                <RadzenLabel Text="Saweat.Web.Public, Copyright Ⓒ 2022">
                </RadzenLabel>
            </ChildContent>
        </RadzenFooter>
    </ChildContent>
</RadzenLayout>