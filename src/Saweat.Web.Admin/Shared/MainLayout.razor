@using Radzen.Blazor
@using Microsoft.AspNetCore.Components.Authorization
@inherits Saweat.Web.Admin.Layouts.MainLayoutComponent
<RadzenDialog/>
<RadzenNotification/>
<RadzenTooltip/>
<RadzenContextMenu/>

<RadzenLayout>
    <ChildContent>

        <AuthorizeView>
            <Authorized>
                <RadzenHeader>
                    <ChildContent>
                        <div class="row justify-content-start align-items-center">
                            <div class="col-6 d-flex align-items-center">
                                <RadzenSidebarToggle Click="@SidebarToggle0Click"></RadzenSidebarToggle>
                                <RadzenLabel Text="Saweat.Web.Admin"></RadzenLabel>
                            </div>
                            <div class="col-6 text-right">
                                <AccessControl/>
                            </div>
                        </div>
                    </ChildContent>
                </RadzenHeader>
            </Authorized>
        </AuthorizeView>
        <RadzenBody @ref="body0">
            <ChildContent>
                <RadzenContentContainer Name="main">
                    @Body
                </RadzenContentContainer>
            </ChildContent>
        </RadzenBody>
        <AuthorizeView>
            <Authorized>
                <RadzenSidebar @ref="sidebar0">
                    <ChildContent>
                        <RadzenPanelMenu style="height: 100%">
                            <RadzenPanelMenuItem Icon="dashboard" Text="Dashboard" Path="dashboard">
                            </RadzenPanelMenuItem>
                            <RadzenPanelMenuItem Icon="import_contacts" Text="Reservas" Path="bookings">
                            </RadzenPanelMenuItem>

                            <RadzenPanelMenuItem Icon="settings" Text="Configuracion">
                                <ChildContent>
                                    <RadzenPanelMenuItem Path="allergens" Text="Alergenos"/>
                                </ChildContent>
                            </RadzenPanelMenuItem>
                        </RadzenPanelMenu>
                    </ChildContent>
                </RadzenSidebar>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <RadzenFooter>
                    <ChildContent>
                        <RadzenLabel Text="Saweat.Web.Admin, Copyright Ⓒ 2022">
                        </RadzenLabel>
                    </ChildContent>
                </RadzenFooter>
            </Authorized>
        </AuthorizeView>
    </ChildContent>
</RadzenLayout>